# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
FLASK_ENV=development
DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///rantsmith.db
# For PostgreSQL: postgresql://username:password@localhost/rantsmith
# For MySQL: mysql://username:password@localhost/rantsmith

# AI Service API Keys
OPENAI_API_KEY=your-openai-api-key-here
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
RUNWAYML_API_KEY=your-runwayml-api-key-here

# Optional: Redis for caching
REDIS_URL=redis://localhost:6379

# File Upload Settings
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Server Settings
HOST=0.0.0.0
PORT=5000

# Email Settings (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Social Media API Keys (for sharing features)
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# Analytics
GOOGLE_ANALYTICS_ID=your-ga-tracking-id
